{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block main %}

	<h1 class="text-center mt-3 mb-3 text-uppercase text-white">Les Utilisateurs</h1>

	{{ include('_flash_messages.html.twig') }}

	<a class="btn btn-success" href="{{ path('back_user_new') }}">Ajouter un utilisateur</a>

	<a class="btn btn-primary float-end mt-3" href="{{ path('back_home') }}">Retour</a>


	<table class="table table-hover table-responsive text-center text-white">
		<thead>
			<tr>
				<th>#</th>
				<th>E-mail</th>
				<th>Pseudo</th>
				<th>Rôles</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>
						{{ user.id }}
					</td>
					<td>
						{{ user.email }}
					</td>
					<td>
						{{ user.nickname }}
					</td>
					<td>
						{{ user.roles|join(', ') }}
					</td>

					<td>
						<div class="d-flex justify-content-end">
							<a id="button_show" class="btn btn-sm btn-warning m-1" href="{{ path('back_user_show', {'id': user.id}) }}">détails</a>
							<a id="button_edit" class="btn btn-sm btn-warning m-1" href="{{ path('back_user_edit', {'id': user.id}) }}">modifier</a>
						</div>
					</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="10">Aucun enregistrement trouvé.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
